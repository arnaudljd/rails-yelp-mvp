<div class="d-flex flex-column my-3">
  <div>
    <h1>My restaurants</h1>
  </div>
  <div>
    <ol>
      <% @restaurants.each do |restaurant| %>
        <li><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-dark" %> - <em><%= restaurant.category %></em></li>
      <% end %>
    </ol>
  </div>
  <div>
    <%= link_to 'Add a new restaurant', new_restaurant_path, class: "text-decoration-none" %>
  </div>
</div>
